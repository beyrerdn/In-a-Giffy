<%= bootstrap_form_for(@gif, remote: true, authenticity_token: true) do |f| %>
  <% if @gif.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@gif.errors.count, "error") %> prohibited this gif from being saved:</h2>
      <ul>
      <% @gif.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :url, placeholder: "Make sure your url ends in '.gif'!" %>
  </div>

  <div class="field">
    <%= f.text_field :all_tags, placeholder: "Tags separated with a comma." %>
  </div>

  <div class="actions">
    <%= f.submit :class => "brn btn-primary" %>
  </div>
<% end %>
